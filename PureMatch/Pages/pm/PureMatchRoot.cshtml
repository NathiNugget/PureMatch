@page
@using PureLib.Model
@model PureMatch.Pages.pm.PureMatchRoot

@{
    User u = Model.Repo.ReadUser(2);
    SessionHelper.Set<User>(u, HttpContext);

}
<head>
    <title>PureGym - PureMatch</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>


@if (User == null) // Hvis ingen bruger er logget ind
{
    <h1>
        PureMatch
    </h1>

    <h1><blockquote class="slogan">Find den perfekte træningspartner</blockquote></h1>



    <div class="container">
        <div class="row">
            <div class="col-2">
            </div>

            <div class="col-8 backgroundcolor">
                <div class="margin40">
                    <p class="emphersize centertext ">
                        PureMatch er til dig der mangler en træningsmakker. Indtast dine oplysninger under din profil, klik på PureMatch og find din makker idag!
                        For at benytte PureMatch skal du være logget ind og have et aktivt medlemskab.
                    </p>
                    <a asp-page="./SelectSubscription"><button class="backgroundcolorbutton" style="margin-right: 10px; border-radius: 5px;"><strong>Bliv medlem</strong></button></a>
                    <a href="../Login/LoginPage"><button class="backgroundcolorbutton" style="border-radius: 5px;"><strong>Log ind</strong></button></a>
                </div>


            </div>
            <div class="col-2">
            </div>
        </div>
    </div>
}
else // Hvis en bruger er logget ind
{

    <h1 class="headers">PureMatch</h1>
    <div>
        <button class="backgroundcolorbutton" asp-route-number="1" type="submit"><strong>Mine Matches</strong></button>
        <form method="post" asp-page-handler="ResetMatch">
            <input type="submit" value="Nulstil min matching" />
        </form>
    </div>

    <div class="container backgroundcolor">

        <form method="post" asp-page-handler="ChangeCriteria">
            <div class="subscription-container margin40 margin">

                <div class="subscription backgroundcolorwhite margin50topbot">
                    <h2>Muskelgrupper</h2>
                    <p>
                        
                            @for (int i = 0; i < Model.Groups.Count; i++)
                            {
                                <input type="checkbox" value="true" asp-for="MuscleGroups[i]"/> @Model.Groups[i]
                                <br />
                            }

                        
                    </p>

                </div>

                <div class="subscription backgroundcolorwhite margin50topbot">
                    <h2>Niveau</h2>
                    <p>
                        @for (int i = 0; i < Model.Levels.Count; i++)
                        {
                            <input type="radio" value="@i" asp-for="@Model.SelectedLevel"/> @Model.Levels[i]
                            <br />  
                        }
                    </p>

                </div>

                <div class="subscription backgroundcolorwhite margin50topbot">
                    <h2>Dage</h2>
                    <p>
                        
                            @for (int i = 0; i < Model.Days.Count; i++)
                            {
                                <input type="checkbox" value="true" asp-for="@Model.DaysList[i]" /> @Model.Days[i]
                                <br />
                            }

                        
                    </p>

                </div>

            </div>
            <input type="submit" class="backgroundcolorbutton" value="Match">
          
        </form>
    </div>








}





