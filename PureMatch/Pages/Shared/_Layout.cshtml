@using PureLib.Model
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PureMatch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PureMatch.styles.css" asp-append-version="true" />
</head>
@{
    User u = null!;
    try
    {
        u = SessionHelper.Get<User>(u, Context); 
    }
    catch
    {
        
    }
}
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/images/logo.png" class="logo"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-fill">
                            <a class="nav-link "></a>
                        </li>
                        <li class="nav-fill">
                            <a class="nav-link "></a>
                        </li>
                        
                        
                        
                        
                        
                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Forside</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="https://www.puregym.dk/find-center">Find Center</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="https://www.puregym.dk/hold">Find Hold</a>
                        </li>
                        @if (u == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/pm/PureMatchRoot">PureMatch</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/pm/PureMatchRoot">Nulstil/vælg matching kriterier</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/pm/PureMatch">PureMatch</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-white" href="https://www.puregym.dk/holdtraening">Book Hold</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="https://www.puregym.dk/personlig-traening">Personlig træning</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="https://www.puregym.dk/inspiration">Inspiration</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="https://www.puregym.dk/find-center/byer">Find Byer</a>
                        </li>
                        
                        <li class="nav-fill">
                            <a class="nav-link "></a>
                        </li>
                        <li class="nav-fill">
                            <a class="nav-link "></a>
                        </li>
                        <li class="nav-fill">
                            <a class="nav-link "></a>
                        </li>

                        @if(u != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Logins/MyProfile">Min profil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Logins/Login">Log ud</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Logins/Login">Log ind</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/pm/SelectSubscription">Opret konto</a>
                            </li>
                        }

                            
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PureMatch - 
            Abasin Mohammad - <a href="mailto:abm001@edu.zealand.dk"><img src="~/images/mail.png" />abm001@edu.zealand.dk</a>
            || Lawin Blend Bamarne - <a href="mailto:lab002@edu.zealand.dk"><img src="~/images/mail.png" />lab002@edu.zealand.dk</a>
            ||  Nathaniel Finn Michel Risum - <a href="mailto:nar002@edu.zealand.dk"><img src="~/images/mail.png" />nar002@edu.zealand.dk</a>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>